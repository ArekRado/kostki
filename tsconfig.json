{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "lib": [
      "es6",
      "dom",
      "es2015",
      "es2017.object",
      "ES2019"
    ],
    "jsx": "react",
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "./src/**/*",
    "__mocks__",
  ],
}